extends ./layout
block content
    body
        h1 Overdue Loans
        p
            a.button(href='/all_loans/new_loan') Create New Loan
        include ./partials/_loan_nav.pug
        table
            thead
                tr
                    th Book
                    th Patron 
                    th Loaned on
                    th Return by 
                    th Returned on
                    th Action
            tbody
            each loan in loans
                        tr
                            td
                                a(href="/all_books/book_detail/" + loan.book_id)= loan.Book.title
                            td
                                a(href="/all_patrons/patron_detail/" + loan.patron_id)= loan.Patron.first_name + " " + loan.Patron.last_name
                            td= loan.loaned_on
                            td= loan.return_by
                            td= loan.returned_on
                            td
                                if !loan.returned_on
                                    a.button(href="/all_books/return_book/" + loan.book_id) Return Book    


