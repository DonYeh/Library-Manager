extends ./layout
block content
    body
        h1 Patron: Return Book
            p
                strong Book Title: &nbsp;
                    =loan.Book.title
            p
                strong Loaned To:&nbsp;
                    =loan.Patron.first_name + " " + loan.Patron.last_name
            p
                strong Loaned On:&nbsp;
                    =loan.loaned_on
            p
                strong Return By:&nbsp;
                    =loan.return_by
            form(action="/all_books/return_book/" + loan.book_id + "/1" + "?_method=PUT" , method="post")
                p
                    label.for("returned_on") Returned on:
                    input(id="returned_on", type="text",  value=date, name="returned_on")
                p
                    input(type="submit", value="Return Book")


