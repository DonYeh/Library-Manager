extends ./layout
block content
    body
        h1 Book:&nbsp; 
            =book.title
        form(action="/all_books/book_detail/" + book.id + "?_method=PUT" , method="POST")
            p
                label.for("title") Title
                input(id="title", type="text", value=book.title, name="title")
            p
                label.for("author") Author
                input(id="author", type="text", value=book.author, name="author")
            p
                label.for("genre") Genre
                input(id="genre", type="text", value=book.genre, name="genre")
            p
                label.for("first_published") First Published
                input(id="first_published", type="text", value=book.first_published, name="first_published")
            p
                input(type='submit', value='Update')
        h2 Loan History
        table
            thead
                tr
                    th Book
                    th Patron
                    th Loaned On
                    th Return By
                    th Returned On
                    th Action
            tbody
                each loan in loans
                    tr
                        td
                            a(href="/all_books/book_detail/" + loan.book_id)
                                =loan.Book.title
                        td
                            a(href="/all_patrons/patron_detail/" + loan.patron_id)
                                =loan.Patron.first_name + " " + loan.Patron.last_name
                        td
                            =loan.loaned_on
                        td
                            =loan.return_by
                        td
                            =loan.returned_on
                        td
                            if !loan.returned_on
                                a.button(href="/all_books/return_book/" + loan.book_id) Return Book

